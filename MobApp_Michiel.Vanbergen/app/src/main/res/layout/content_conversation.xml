<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01579b"
    android:focusedByDefault="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michiel.mobapp_michielvanbergen.ConversationActivity"
    tools:showIn="@layout/activity_conversation">

    <ListView
        android:id="@+id/conversationListView"
        android:layout_width="395dp"
        android:layout_height="524dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="334dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/message"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:inputType="textNoSuggestions|textMultiLine"
        android:textColor="#01579b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversationListView"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/sendButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="@+id/messageEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/messageEditText"
        app:layout_constraintTop_toTopOf="@+id/messageEditText" />
</android.support.constraint.ConstraintLayout>
